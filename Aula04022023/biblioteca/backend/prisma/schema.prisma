// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Cliente {
  id      Int       @id @default(autoincrement())
  cpf     String    @unique
  nome    String
  Aluguel Aluguel[]
}

model Categoria {
  id                  Int         @id @default(autoincrement())
  descricao           String      @unique
  classificacao       String      @unique
  superior            Categoria[] @relation("CategoriaSuperior")
  categoriaSuperior   Categoria?  @relation("CategoriaSuperior", fields: [categoriaSuperiorId], references: [id])
  categoriaSuperiorId Int?
  Livro               Livro[]
}

model Livro {
  id          Int       @id @default(autoincrement())
  titulo      String    @unique
  autor       String
  isAlugado   Boolean   @default(false)
  valorDiaria Float
  Aluguel     Aluguel[]
  categoriaId Int
  Categoria   Categoria  @relation(fields: [categoriaId], references: [id])
}

model Aluguel {
  id              Int       @id @default(autoincrement())
  data            DateTime  @default (now())
  dataDevolucao   DateTime?
  valorArrecadado Decimal?
  clienteId       Int
  Cliente         Cliente   @relation(fields: [clienteId], references: [id])
  livroId         Int
  Livro           Livro     @relation(fields: [livroId], references: [id])
}
